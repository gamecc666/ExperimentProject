
@{
    ViewData["Title"] = "TwoAnim_Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>使用Two.js绘制</title>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/two.js"></script>
    <style type="text/css">
        body{
            background-color:aqua;
        }
        #mycanvas_content{
            background-color:burlywood;  
        }
    </style>    
</head>
<body>
    <div id="mycanvas_content" ></div>
</body>
</html>

<script type="text/javascript">
    $().ready(function () {
        console.log('--------------页面结构已经加载完-------------');
        /*画布初始化结束*/
        var dom = document.getElementById('mycanvas_content');
        var canvas = { width: 600, heigh: 400 };
        var two = new Two(canvas).appendTo(dom);
       
        /*画一条弧线*/
        var myarc = two.makeArcSegment(350, 400, 250, 250, Math.PI/-4,  -3* Math.PI/4);
        myarc.fill = "#ff8000";
        myarc.stroke = "#f00";
        myarc.linewidth = 1;

         /*发射点*/
        var startpoint = two.makeCircle(225, (400 - 125 * Math.sqrt(3)), 5);
        startpoint.fill = "#ffd800";
        startpoint.stroke = "#f00";
        startpoint.linewidth = 2;

        /*发射线路*/
        var lanuchline = two.makeLine(225, (400 - 125 * Math.sqrt(3)), 150, (400 - 200 * Math.sqrt(3)));
        lanuchline.fill = "#ffd800";
        lanuchline.stroke = "#f00";
        lanuchline.linewidth = 2;

        /*探测线路*/
        var searchline = two.makeLine(150, (400 - 200 * Math.sqrt(3)), 475, (400 - 125 * Math.sqrt(3)));
        searchline.fill = "#ffd800";
        searchline.stroke = "#f00";
        searchline.linewidth = 2;

        /*目标点*/
        var despoint = two.makeCircle(475, (400 - 125 * Math.sqrt(3)), 5);
        despoint.fill = "#ffd800";
        despoint.stroke = "#f00";
        despoint.linewidth = 2;

        two.update();
    });
</script>

