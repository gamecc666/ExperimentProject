@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            user : <input type="text" id="userInput" />
            room no : <input type="text" id="txtRoomNo" value="8888" />
            password:<input type="password" id="txtPassword" value="" />
            <br />
            <div style="display:block ;margin-top:5px">
                <button id="goChatRoom">Join Room</button>
                @*<button id="outChatRoom" style="visibility:hidden">Leave Room</button>*@
                <button id="outChatRoom" style="display:none">Leave Room</button>
            </div>
            <br />
            Message.....<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12"><hr /></div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
