
@{
    ViewData["Title"] = "Index";
    Layout = "_CustomerLayout";
}

@section CssStyle{ 
    <style type="text/css">
        button{
            color:darkturquoise;
        }
    </style>
}

<div id="rootdiv">
    <button id="tofirstpage">跳转到下一个界面</button>
    <input type="text" name="name" value="" />
    <input type="text" name="sex" value="" />
    <input type="number" name="age" value="" />
    <input type="text" name="info" value="" />
</div>

@section Scripts{
<script type="text/javascript">
    $(document).ready(function () {
        console.log("页面结构加载完毕！！！");
        BtnListenEvent();
    });
    var BtnListenEvent = () => {
        $('#tofirstpage').on('click', function (data) {
            console.log('---点击了index界面的下一页按钮；');
            window.location.href = '/Page/FirstPage';
        });      
    };
</script>
}