@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8"/>
    <title>使用grid布局</title>
    <style type="text/css">
        #con {
            width: 30%;
            height: 20%;
            max-height: 20%;
            background-color: gold;
            overflow: auto;
            display: grid;
            grid-template-columns: repeat(auto-fill,80px);
            grid-template-rows: repeat(auto-fill,100px);
            grid-row-gap: 5px;
            justify-content: space-evenly;
        }
        .item {
            width:80px;
            height:100px;
            font-size: 2em;
            text-align: center;
            border: 1px solid #e5e4e9;
        }      
        .textarea_unclass {
            background-color: darkgray;
            color: white;
            text-align: left;
            width: 100%;
            height: 100%;
            resize: none;
        }
        .add_paste {
            border-width: 2px;
            width: 80px;
            height: 80px;
            background-image: url('../images/add_pic.jpg');
            background-repeat: no-repeat;
            margin-left: 5px;
        }
    </style>
</head>
<body>   
    <div id="con">       
        <button type="button" id="noclassified_add" class="add_paste"></button>
    </div>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
</body>
</html>
<script type="text/javascript">
    $('#noclassified_add').on('click', function (event) {
        console.log('点击了增加按钮');
        $('#noclassified_add').before("<div class='item'><textarea class='textarea_unclass'></textarea></div>");
    });
</script>


